{% if restic_ssh_enabled %}
RESTIC_REPOSITORY=sftp:{{ restic_ssh_host }}:{{ restic_repository_name }}
{% else %}
RESTIC_REPOSITORY="{{ restic_repository }}"
{% endif -%}
RESTIC_PASSWORD={{ restic_password}}

{% if restic_aws_access_key_id is defined and restic_aws_secret_access_key is defined %}
AWS_ACCESS_KEY_ID={{ restic_aws_access_key_id}}
AWS_SECRET_ACCESS_KEY={{ restic_aws_secret_access_key}}
{% endif %}

{% if restic_b2_account_id is defined and restic_b2_account_key is defined %}
B2_ACCOUNT_ID={{ restic_b2_account_id }}
B2_ACCOUNT_KEY={{ restic_b2_account_key }}
{% endif %}
